{
  //"editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "json.format.enable": false,
  // https://code.visualstudio.com/docs/languages/identifiers
  "files.associations": {
    "*.dist": "php"
  },
  "beautify.ignore": [
    "/node_modules/**/*",
    "/vendor/**/*",
    "**/*.js",
    "**/*.jsx",
    "**/*.json",
    "**/*.css",
    "**/*.scss"
  ],
  // https://css-tricks.com/prettier-beautify/
  "beautify.language": {
    "html": ["htm", "html"],
    "css": [],
    "js": []
  },
  // https://marketplace.visualstudio.com/items?itemName=ikappas.phpcs
  // https://www.php-fig.org/psr/psr-2/
  "phpcs.executablePath": "vendor\\squizlabs\\php_codesniffer\\bin\\phpcs",
  "phpcs.standard": "PSR2",
  "phpcs.ignorePatterns": ["**/*.blade.php"],
  "phpcs.showSources": true,
  // https://github.com/junstyle/vscode-php-cs-fixer
  "php-cs-fixer.executablePath": "vendor\\friendsofphp\\php-cs-fixer\\php-cs-fixer",
  "php-cs-fixer.executablePathWindows": "php-cs-fixer.bat", //need run ```composer global require friendsofphp/php-cs-fixer``` command.
  "php-cs-fixer.onsave": true,
  "php-cs-fixer.rules": "@PSR2",
  "php-cs-fixer.config": ".php_cs.dist",
  "php-cs-fixer.allowRisky": false,
  "php-cs-fixer.pathMode": "override",
  "php-cs-fixer.exclude": ["**/*.blade.php"],
  "php-cs-fixer.autoFixByBracket": true,
  "php-cs-fixer.autoFixBySemicolon": false,
  "php-cs-fixer.formatHtml": false,
  "php-cs-fixer.documentFormattingProvider": true
}
